<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Font and display settings for various devices -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Web page title -->
  <title>YouTube Channel Metrics</title>

  <!-- Browser tab icon (favicon) -->
  <link rel="icon" href="images/logo.png" type="image/png">

  <!-- Link to Bootstrap stylesheet -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Link to the stylesheet for dark mode -->
  <link rel="stylesheet" href="css/dark-mode.css">
</head>

<body>

  <!-- Including the header from the partials folder -->
  <%- include('partials/header') %>

    <!-- Main container -->
    <div class="container mt-4 ">
      <!-- Card wrapper for the form -->
      <div class="card shadow-sm rounded dark-mode-target">
        <!-- Card header -->
        <div class="card-header bg-light dark-mode-target">
          <h5 class="card-title text-center">Enter Channel URL</h5>
        </div>
        <!-- Body of the card -->
        <div class="card-body bg-light dark-mode-target">
          <!-- Form to submit the channel URL -->
          <form method="POST" action="/" class="mb-4">
            <!-- Input field for the channel URL -->
            <input type="text" class="form-control form-control-lg text-center mb-3 rounded-pill" id="channelLink"
              name="channelLink" placeholder="https://www.youtube.com/@[handle]" required>
            <!-- Button to get metrics -->
            <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill">Get Metrics</button>
          </form>
        </div>
      </div>

      <!-- Error message -->
      <% if (locals.error) { %>
        <div class="alert alert-danger mt-3 rounded">
          <%= error %>
        </div>
        <% } %>
    </div>

    <!-- Including other sections from the partials folder -->
    <%- include('partials/channel') %>
      <%- include('partials/videos') %>
        <%- include('partials/footer') %>

          <!-- Linking to Bootstrap's JavaScript scripts and dark mode script -->
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
          <script src="js/dark-mode.js"></script>
</body>

</html>