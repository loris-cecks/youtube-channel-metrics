<% if (locals.videos && videos.length) { %>
  <!-- Container for videos -->
  <div class="container mt-4 pb-5 my-4">
    <!-- Card for video details -->
    <div class="card shadow-sm rounded bg-light dark-mode-target">
      <div class="card-body">
        <!-- Video table header for medium and large screens -->
        <div class="row d-none d-md-flex font-weight-bold">
          <div class="col-1">#</div> <!-- Sequence number -->
          <div class="col-2">Thumbnail</div> <!-- Video thumbnail -->
          <div class="col-3">Title</div> <!-- Video title -->
          <div class="col-2">Duration</div> <!-- Video duration -->
          <div class="col-1">Views</div> <!-- Video views -->
          <div class="col-1">Likes</div> <!-- Video likes -->
          <div class="col-2">Comments</div> <!-- Comments on the video -->
        </div>
        <!-- List of videos -->
        <% videos.forEach((video, index)=> { %>
          <!-- Video table row for each video for medium and large screens -->
          <div class="row border-bottom d-none d-md-flex">
            <div class="col-1">
              <%= index + 1 %> <!-- Sequence number -->
            </div>
            <div class="col-2">
              <!-- Video thumbnail -->
              <img src="<%= video.thumbnail %>" alt="Video thumbnail" class="img-fluid rounded">
            </div>
            <div class="col-3">
              <%= video.title %> <!-- Video title -->
            </div>
            <div class="col-2">
              <%= video.duration %> <!-- Video duration -->
            </div>
            <div class="col-1">
              <%= video.views %> <!-- Video views -->
            </div>
            <div class="col-1">
              <%= video.likes %> <!-- Video likes -->
            </div>
            <div class="col-2">
              <%= video.comments %> <!-- Comments on the video -->
            </div>
          </div>
          <!-- Card for each video for small screens -->
          <div class="d-md-none card mb-3 shadow-sm dark-mode-target">
            <div class="card-body">
              <!-- Video title and number -->
              <h5 class="card-title">#<%= index + 1 %>
                  <%= video.title %>
              </h5>
              <!-- Video duration -->
              <p class="card-text"><small class="text-muted">
                  <%= video.duration %>
                </small></p>
              <!-- Video description -->
              <p class="card-text">
                <%= video.description %>
              </p>
              <!-- Video views -->
              <p class="card-text">Views: <%= video.views %>
              </p>
              <!-- Video likes -->
              <p class="card-text">Likes: <%= video.likes %>
              </p>
              <!-- Comments on the video -->
              <p class="card-text">Comments: <%= video.comments %>
              </p>
            </div>
          </div>
          <% }); %>
      </div>
    </div>
  </div>
  <% } %>